<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.spotgrab">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".UploadPicActivity" />
        <activity android:name=".HomeEmployerActivity" />
        <activity android:name=".HomeSpotterActivity" />
        <activity
            android:name=".EmpNavDrawerActivity"
            android:noHistory="true" />
        <activity
            android:name=".SpotNavDrawerActivity"
            android:noHistory="true" />
        <activity android:name=".EmpCalendarActivity" />
        <activity android:name=".SpotCalendarActivity" />
        <activity android:name=".EditProfileActivity" />
        <activity android:name=".EmpRatingActivity" />
        <activity android:name=".DetailedLookActivity" />
        <activity android:name=".CandidateSelectorActivity"
            android:noHistory="true"/>
        <activity android:name=".EmpActiveActivity"
            android:noHistory="true" />
        <activity android:name=".EmpPendingActivity"
            android:noHistory="true" />
        <activity android:name=".PlanActivity" />
        <activity android:name=".SpotActiveActivity"
            android:noHistory="true"/>
        <activity android:name=".SpotOffersActivity"
            android:noHistory="true"/>
        <activity android:name=".SpotSchedActivity"
            android:noHistory="true"/>
        <activity android:name=".SpotRatingActivity"></activity>
    </application>

</manifest>